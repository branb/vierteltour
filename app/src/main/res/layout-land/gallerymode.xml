<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000">

  <android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ImagePagerGallery"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="visible"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:background="#70000000"
    android:animateLayoutChanges="true"
    android:id="@+id/relativeTop"
    android:visibility="visible">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/x_button"
      android:src="@drawable/beenden_hell"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_marginRight="20dp"
      android:background="#70000000"
      />

    <TextView
      android:id="@+id/titleGalleryTop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#ffffff"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:visibility="gone"/>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/relativeBot"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="#70000000"
    android:animateLayoutChanges="true"
    android:visibility="visible">

    <SeekBar
      android:id="@+id/seek_barGallery"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_toRightOf="@+id/play_buttonGallery"
      android:layout_marginRight="45dp"
      android:visibility="visible"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/play_buttonGallery"
      android:src="@drawable/play_hell"
      android:background="#70000000"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="20dp"
      android:visibility="visible"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0:00"
      android:textColor="#ffffff"
      android:id="@+id/durationGallery"
      android:layout_marginRight="20dp"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_alignParentRight="true"
      android:visibility="visible"
      />

  </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/dialog"
  android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:background="@drawable/round_layout"
  android:layout_centerVertical="true"
  android:layout_centerHorizontal="true"
  android:paddingTop="5dp"
  android:paddingBottom="25dp">

  <ImageButton
    android:id="@+id/btn_x_dialog"
    android:layout_width="@dimen/dialog_xbtn_width"
    android:layout_height="@dimen/dialog_xbtn_width"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:scaleType="fitCenter"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/transparent"
    />

  <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
    android:id="@+id/title_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="@dimen/dialog_title"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_below="@+id/btn_x_dialog"
    android:layout_marginTop="10dp"
    android:text="a"/>

    <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
      android:id="@+id/text_dialog"
      android:layout_below="@+id/title_dialog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="@dimen/dialog_text"
      android:text="A"
      android:textStyle="italic"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:paddingBottom="15dp"
      />

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dialog_laden_height"
    android:id="@+id/button_dialog"
    android:layout_below="@+id/text_dialog"
    android:background="@color/transparent"
    android:scaleType="fitCenter"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    />


</RelativeLayout>

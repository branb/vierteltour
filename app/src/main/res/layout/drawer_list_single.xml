<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    >

    <ImageView
        android:id="@+id/menuimg"
        android:layout_width="@dimen/drawer_icon_width"
        android:layout_height="@dimen/drawer_icon_width"
        android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:scaleType="fitCenter"
      />
    <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
        android:id="@+id/menutxt"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menuimg"

        />
</RelativeLayout>

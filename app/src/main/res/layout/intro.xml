<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/intro_layout"
  android:layout_margin="25dp"
  android:paddingBottom="@dimen/intro_padding_bottom"
  >

  <android.support.v4.view.ViewPager
    android:id="@+id/intro_pager"
    android:layout_marginTop="@dimen/intro_viewpager_margin_top"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_layout"
    android:layout_marginBottom="@dimen/intro_viewpager_margin_bot">
  </android.support.v4.view.ViewPager>

  <ImageButton
    android:id="@+id/x_intro"
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:scaleType="fitCenter"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="@dimen/intro_x_margin_top"
    android:layout_marginRight="@dimen/intro_x_margin_right"
    android:paddingTop="0dp"
    android:paddingRight="5dp" />

<RelativeLayout
  android:id="@+id/bottom_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentBottom="true">
  <LinearLayout
    android:id="@+id/dotsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"/>

  <ImageButton
    android:id="@+id/finish"
    android:layout_width="@dimen/intro_finish_width"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:visibility="invisible"
    android:scaleType="fitCenter"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="35dp"
    android:layout_alignParentRight="true"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"/>
</RelativeLayout>
</RelativeLayout>

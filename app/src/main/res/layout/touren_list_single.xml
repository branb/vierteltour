<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <!-- Diese Datei gibt den Aufbau einer Zeile der Liste vor
     ImageView (img) ist das Bild links in der Liste, 1. TextView (txt) für Titel der Tour, 2. TextView (subtxt) für Autor und Zeit/Weg -->
    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subtxt1"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/txt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtxt2"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/subtxt1"/>
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#20000000"
        android:layout_below="@+id/subtxt2"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addinfo"
        android:visibility="gone"
        android:layout_below="@+id/divider"
        android:layout_toRightOf="@+id/img"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zumstartlist"
        android:layout_below="@+id/addinfo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@drawable/zum_start"
        android:onClick="swapToViewPager"/>
</RelativeLayout>
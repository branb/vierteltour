<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/intro_page"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="35dp"
  android:paddingRight="35dp"
  android:paddingTop="30dp">

  <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
    android:id="@+id/topic"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="italic"
    android:textSize="18sp"
    android:textColor="@color/white"
    />

  <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
    android:id="@+id/welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/topic"
    android:textSize="18sp"
    android:textColor="@color/white"
    android:textStyle="bold"/>

  <View
    android:id="@+id/divider"
    android:layout_width="fill_parent"
    android:layout_height="1.5dp"
    android:background="@color/white"
    android:layout_below="@+id/welcome"
    android:layout_marginTop="@dimen/intro_divider_margin"
    android:layout_marginBottom="@dimen/intro_divider_margin"/>

  <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
    android:id="@+id/description"
    android:textColor="@color/white"
    android:textSize="@dimen/intro_desc_text_size"
    android:lineSpacingExtra="@dimen/intro_desc_linespacing"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/divider"
    android:layout_above="@+id/intro_image"/>

  <ImageView
    android:id="@+id/intro_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:adjustViewBounds="true"
    />

</RelativeLayout>

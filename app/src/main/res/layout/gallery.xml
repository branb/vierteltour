<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_button"
        android:src="@drawable/beenden_hell"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageScreenGallery"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stationenbeschreibung"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/videoViewGallery"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/titleGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoViewGallery"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
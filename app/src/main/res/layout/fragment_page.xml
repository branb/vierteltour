<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/vg_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/station_padding"
        android:paddingRight="@dimen/station_padding">


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
      android:id="@+id/clicklayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/grey"
      android:layout_marginTop="20dp"
     >
      <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="@dimen/station_image_height"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:layout_centerHorizontal="true">
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
          android:id="@+id/imagefrag"
          android:gravity="top"
          android:scaleType="centerCrop"
          />
        <RelativeLayout
          android:visibility="gone"
          android:id="@+id/transparentstation"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/transparentred"/>
      <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/station_icon_height"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

      </RelativeLayout>

      <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titlefrag"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_below="@+id/image_layout"
        android:paddingLeft="@dimen/station_padding"
        android:paddingRight="@dimen/station_padding"
        ext:documentView_cacheConfig="auto_quality"
        ext:documentView_hyphen="-"
        ext:documentView_insetPaddingLeft="@dimen/station_padding"
        ext:documentView_insetPaddingRight="@dimen/station_padding"
        ext:documentView_insetPaddingTop="5dp"
        ext:documentView_reverse="false"
        ext:documentView_textSize="@dimen/station_textsize"
        ext:documentView_textSubPixel="true"
        ext:documentView_textTypefacePath="Bariol_Regular.ttf"/>
        <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
            android:id="@+id/subtitlefrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBTITLE"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:visibility="invisible"/>
</RelativeLayout>

      <RelativeLayout
        android:id="@+id/numberlayout"
        android:layout_width="@dimen/station_numberlayout_width"
        android:layout_height="@dimen/station_numberlayout_height"
        android:background="@drawable/pagefragmentnumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        >

        <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
          android:id="@+id/numbertext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:layout_marginTop="@dimen/station_number_marginTop"
          android:paddingTop="5dp"
          android:textStyle="bold"
          />

</RelativeLayout>
</RelativeLayout>
    </FrameLayout>
</RelativeLayout>

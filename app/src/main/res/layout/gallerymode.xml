<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">

  <android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ImagePagerGallery"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="visible"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/gallerytoplayout"
    android:animateLayoutChanges="true"
    android:id="@+id/relativeTop"
    android:visibility="visible">

    <ImageButton
      android:layout_width="@dimen/gallery_xbtn_width"
      android:layout_height="@dimen/gallery_xbtn_width"
      android:id="@+id/x_button_bar"
      android:layout_alignParentRight="true"
      android:padding="@dimen/gallery_xbtn_padding"
      android:layout_centerVertical="true"
      android:scaleType="fitCenter"
      android:background="@color/transparent"
      />

    <RelativeLayout
      android:id="@+id/seekbar_layout_top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      >

      <SeekBar
        android:id="@+id/seek_barGallery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="2dip"
        android:maxHeight="2dip"
        android:thumbOffset="0dp"
        android:thumb="@drawable/thumb"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

      <ImageButton
        android:layout_width="@dimen/gallery_play_width"
        android:layout_height="@dimen/gallery_play_width"
        android:id="@+id/play_buttonGallery"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/gallery_play_padding"
        android:paddingBottom="@dimen/gallery_play_padding"
        android:layout_toLeftOf="@+id/seek_barGallery"
        android:visibility="gone"/>

      <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textSize="@dimen/gallery_textsize"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:id="@+id/durationGallery"
        android:layout_toRightOf="@+id/seek_barGallery"
        android:visibility="gone"
        />

    </RelativeLayout>


  </RelativeLayout>


  <LinearLayout
    android:id="@+id/relativeBot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:visibility="visible"
    >

    <RelativeLayout
      android:id="@+id/seekbar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:animateLayoutChanges="true"
      android:visibility="gone">

      <SeekBar
        android:id="@+id/seek_barGallery_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minHeight="2dip"
        android:maxHeight="2dip"
        android:thumbOffset="0dp"
        android:thumb="@drawable/thumb"
        android:visibility="visible"
        />

      <ImageButton
        android:layout_width="@dimen/gallery_play_width"
        android:layout_height="@dimen/gallery_play_width"
        android:id="@+id/play_buttonGallery_bar"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/seek_barGallery_bar"
        android:paddingTop="@dimen/gallery_play_padding"
        android:paddingBottom="@dimen/gallery_play_padding"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

      <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/white"
        android:textSize="@dimen/gallery_textsize"
        android:id="@+id/durationGallery_bar"
        android:layout_toRightOf="@+id/seek_barGallery_bar"
        android:layout_centerVertical="true"
        android:visibility="visible"
        />
    </RelativeLayout>

    <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
      android:id="@+id/titleGallery"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="50dp"
      android:layout_marginLeft="50dp"
      android:textSize="@dimen/gallery_textsize"
      android:gravity="center"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:textColor="@color/white"
      />

        <LinearLayout
          android:id="@+id/viewPagerCountDots"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:visibility="visible"
          android:gravity="center"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="15dp"
          />


  </LinearLayout>


</RelativeLayout>


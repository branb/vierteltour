<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000">

  <android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ImagePagerGallery"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="visible"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="#70000000"
    android:animateLayoutChanges="true"
    android:id="@+id/relativeTop"
    android:visibility="visible">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:id="@+id/x_button_bar"
      android:layout_alignParentRight="true"
      android:layout_marginRight="10dp"
      android:scaleType="fitCenter"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      android:background="@color/transparent"
      />

    <RelativeLayout
      android:id="@+id/seekbar_layout_top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:visibility="gone">

      <SeekBar
        android:id="@+id/seek_barGallery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="2dip"
        android:maxHeight="2dip"
        android:thumbOffset="0dp"
        android:thumb="@drawable/thumb"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />

      <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/play_buttonGallery"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_toLeftOf="@+id/seek_barGallery"
        android:visibility="visible"/>

      <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:id="@+id/durationGallery"
        android:layout_toRightOf="@+id/seek_barGallery"
        android:visibility="visible"
        />

    </RelativeLayout>


  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/relativeBot"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:background="#70000000"
    android:animateLayoutChanges="true"
    android:visibility="visible">

    <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
      android:id="@+id/titleGallery"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:gravity="center"
      android:layout_above="@+id/viewPagerCountDots"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:textColor="#ffffff"
      />

    <RelativeLayout
      android:id="@+id/seekbar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/titleGallery"
      android:visibility="gone">

    <SeekBar
      android:id="@+id/seek_barGallery_bar"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:minHeight="2dip"
      android:maxHeight="2dip"
      android:thumbOffset="0dp"
      android:thumb="@drawable/thumb"
      android:visibility="visible"
      />

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/play_buttonGallery_bar"
      android:background="@color/transparent"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/seek_barGallery_bar"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:scaleType="fitCenter"
      android:visibility="visible"/>

    <com.uni_wuppertal.iad.vierteltour.utility.font.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0:00"
      android:textColor="#ffffff"
      android:id="@+id/durationGallery_bar"
      android:layout_toRightOf="@+id/seek_barGallery_bar"
      android:layout_centerVertical="true"
      android:visibility="visible"
      />
    </RelativeLayout>

    <LinearLayout
      android:id="@+id/viewPagerCountDots"
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:visibility="visible"
      android:layout_marginBottom="5dp"/>



  </RelativeLayout>


</RelativeLayout>

